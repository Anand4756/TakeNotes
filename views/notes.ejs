<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NOTES</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .column {
  float: left;
  padding: 10px;
  height: 250px;
 /* Should be removed. Only for demonstration */
}

.left, .right {
  width: 20%;
  border: solid 5px rgb(192, 65, 230);
}

.middle {
  width: 20%;
  border: solid 5px ;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
button:hover{
    cursor: pointer;
}
</style>
</head>
<body>
   <h2 style="text-align: center;">NOTES</h2>

    <div class="row" id="books" >

        <% notesdata.forEach(function(notess){ %>
            <% if(notess.notestype!="question-paper") { %>
            <div class="column right" style="background-color: chocolate;">
     
            <h2><%= notess.notessubject %></h2>
            <h2><%= notess.notestopic %></h2>
            <h3 style="margin-top: 40%;"></h3>
       
           <a href="./uploads/<%= notess.notesfile %>" download><button type="submit" class="sendbtn" 
            style="font-size: 25px; font-family: Verdana, Geneva, Tahoma, sans-serif; 
            background-color: chocolate; border-radius: 20px; margin-left: 3px;" >DOWNLOAD</button></a>
      
        </div>
        <% } %>
        <% }) %>
        
      </div> 


</body>
</html>